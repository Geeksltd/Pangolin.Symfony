{% extends 'base.html.twig' %}

{% block title %} Mails {% endblock %}

{% block body %}
    <h1>List</h1>

    <table class="table">
        <thead>
        <tr>
            {% for field in fields %}
                <th>{{ field|capitalize }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for record in records %}
            <tr>

                {% for field in fields %}
                    <td>{{ attribute(record, field) }}</td>
                {% endfor %}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
